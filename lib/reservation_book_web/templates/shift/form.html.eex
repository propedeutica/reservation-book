<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :day_of_week, class: "control-label" %>
    <%= number_input f, :day_of_week, class: "form-control" %>
    <%= error_tag f, :day_of_week %>
  </div>

  <div class="form-group">
    <%= label f, :start_time, class: "control-label" %>
    <%= time_select f, :start_time, class: "form-control" %>
    <%= error_tag f, :start_time %>
  </div>

  <div class="form-group">
    <%= label f, :end_time, class: "control-label" %>
    <%= time_select f, :end_time, class: "form-control" %>
    <%= error_tag f, :end_time %>
  </div>

  <div class="form-group">
    <%= label f, :sites_reserved, class: "control-label" %>
    <%= number_input f, :sites_reserved, class: "form-control" %>
    <%= error_tag f, :sites_reserved %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
